@model QuanLySinhVien.ViewModel.Catalog.LopBienChe.LopBienCheUpdateRequest

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ID_GiangVien" class="control-label">Giảng viên</label>
                    <select asp-for="ID_GiangVien" class="form-control">
                        <option value="">Giảng viên</option>
                        @if (ViewBag.giangViens != null)
                        {
                            @foreach (var giangvien in ViewBag.giangViens)
                            {
                                <option value="@giangvien.ID">@giangvien.ID @giangvien.Ho @giangvien.Ten</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="ID_GiangVien" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" value="Save" class="btn btn-primary">Đồng ý</button>
                </div>
            </form>
        </div>
    </div>
</div>


