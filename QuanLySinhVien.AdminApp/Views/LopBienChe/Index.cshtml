@using QuanLySinhVien.ViewModel.Common
@using QuanLySinhVien.ViewModel.Catalog.LopBienChe
@model PagedResult<LopBienCheViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Danh sách môn học</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="user-topbar">
                <div class="float-left">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <a class="btn btn-success" asp-action="Create" asp-controller="LopBienChe">Tạo mới</a>
                    </h6>
                </div>
                <div class=" float-lg-right">
                    <form asp-action="Index" method="get" class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100">
                        <div class="input-group">
                            <input value="@ViewBag.keyword" type="text" name="keyword" class="form-control bg-white" placeholder="Tìm kiếm..." aria-label="Search" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fas fa-search fa-sm"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (ViewBag.SuccessMessage != null)
            {
                <div id="msgAlert" class="alert alert-success" role="alert">
                    @ViewBag.SuccessMessage
                </div>
            }
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            Năm bắt đầu
                        </th>
                        <th>
                            Năm kết thúc
                        </th>
                        <th>
                            ID Khoa
                        </th>
                        <th>
                            ID Giảng viên
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NamBatDau)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NamKetThuc)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ID_Khoa)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ID_GiangVien)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @await Component.InvokeAsync("Pager", Model)
        </div>
    </div>
</div>
