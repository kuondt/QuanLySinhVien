@model QuanLySinhVien.ViewModel.Catalog.LopBienChe.LopBienCheCreateRequest

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group">
                    <label asp-for="NamBatDau" class="control-label"></label>
                    <input asp-for="NamBatDau" class="form-control" value="@DateTime.Now.Year" />
                    <span asp-validation-for="NamBatDau" class="text-danger"></span>
                </div>               
                <div class="form-group">
                    <label asp-for="ID_Khoa" class="control-label"></label>
                    <input asp-for="ID_Khoa" class="form-control" />
                    <span asp-validation-for="ID_Khoa" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ID_GiangVien" class="control-label"></label>
                    <input asp-for="ID_GiangVien" class="form-control" />
                    <span asp-validation-for="ID_GiangVien" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" value="Create" class="btn btn-primary" >Đồng ý</button>
                </div>
            </form>
        </div>
    </div>
</div>

