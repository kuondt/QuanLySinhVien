@model IEnumerable<QuanLySinhVien.ViewModel.Catalog.MonHocs.MonHoc_ViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Scripts{
    <script>
        setTimeout(function () {
            $("#msgAlert").fadeOut('slow');
        }, 2000);
    </script>
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Danh sách user</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="user-topbar">
                <div class="float-left">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <a class="btn btn-success" asp-action="Create" asp-controller="User">Tạo mới user</a>
                    </h6>
                </div>
                <div class=" float-lg-right">
                    <form asp-action="Index" method="get" class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100">
                        <div class="input-group">
                            <input value="@ViewBag.keyword" type="text" name="keyword" class="form-control bg-white" placeholder="Tìm kiếm..." aria-label="Search" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fas fa-search fa-sm"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (ViewBag.SuccessMessage != null)
            {
                <div id="msgAlert" class="alert alert-success" role="alert">
                    @ViewBag.SuccessMessage
                </div>
            }
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SoThuTu)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TenMonHoc)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SoTiet)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SoTinChi)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ID_Khoa)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SoThuTu)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenMonHoc)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SoTiet)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SoTinChi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ID_Khoa)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @*@await Component.InvokeAsync("Pager", Model)*@
        </div>
    </div>

</div>

