@model QuanLySinhVien.ViewModel.Catalog.MonHocs.MonHocUpdateRequest

@{
    ViewData["Title"] = "Cập nhật";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="TenMonHoc" class="control-label"></label>
                    <input asp-for="TenMonHoc" class="form-control" />
                    <span asp-validation-for="TenMonHoc" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SoTinChi" class="control-label"></label>
                    <input asp-for="SoTinChi" class="form-control" />
                    <span asp-validation-for="SoTinChi" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" value="Save" class="btn btn-primary" >Đồng ý</button>
                </div>
            </form>
        </div>
    </div>
</div>

